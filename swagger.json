{
    "swagger": "2.0",
    "info": {
        "title": "FullStackTest Api",
        "description": "Client/Providers CRUD",
        "version": "1.0.0"
    },
    "host": "localhost",
    "schemes": [
        "http"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/clients": {
            "get": {
                "summary": "Client's list",
                "description": "The clients endpoint returns the client's list and their providers.\n",
                "tags": [
                    "Clients list"
                ],
                "responses": {
                    "200": {
                        "description": "An array of clients",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Client"
                            }
                        }
                    }
                }
            }
        },
        "/clients/:id": {
            "post": {
                "summary": "Updates an existing client or creates a new one",
                "description": "This endpoint lets you create or update clients and their providers\n",
                "tags": [
                    "Creating a client, updating a client"
                ],
                "responses": {
                    "200": {
                        "description": "A json object with the results of the operations",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/ClientSaveResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "A json object containing the operation error's",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/ErrorResponse"
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete an existing client",
                "description": "This enddpoint lets you delete a specific client.\n",
                "tags": [
                    "Deleting clients"
                ],
                "responses": {
                    "200": {
                        "description": "A json object with the results of the operations",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/DeleteResponse"
                            }
                        }
                    }
                }
            }
        },
        "/providers": {
            "get": {
                "summary": "Provider's list",
                "description": "The providers endpoint returns the provider's list.\n",
                "tags": [
                    "Providers list"
                ],
                "responses": {
                    "200": {
                        "description": "An array of providers",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Provider"
                            }
                        }
                    }
                }
            }
        },
        "/providers/:id": {
            "post": {
                "summary": "Updates an existing provider or creates a new one",
                "description": "This endpoint lets you create or update providers\n",
                "tags": [
                    "Creating a provider, updating a provider"
                ],
                "responses": {
                    "200": {
                        "description": "A json object with the results of the operations",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/ProviderSaveResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "A json object containing the operation error's",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/ErrorResponse"
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete an existing provider",
                "description": "This enddpoint lets you delete a specific provider.\n",
                "tags": [
                    "Deleting providers"
                ],
                "responses": {
                    "200": {
                        "description": "A json object with the results of the operations",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/DeleteResponse"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "DeleteResponse": {
            "type": "object",
            "properties": {
                "success": {
                    "type": "boolean",
                    "description": "true if client was deleted succesfuly"
                }
            }
        },
        "ClientSaveResponse": {
            "type": "object",
            "properties": {
                "created": {
                    "type": "boolean",
                    "description": "True if a new record was created"
                },
                "model": {
                    "$ref": "#/definitions/Provider"
                },
                "phone": {
                    "type": "string",
                    "description": "The client's phone."
                },
                "email": {
                    "type": "string",
                    "description": "The client's email."
                }
            }
        },
        "ProviderSaveResponse": {
            "type": "object",
            "properties": {
                "created": {
                    "type": "boolean",
                    "description": "True if was a new record"
                },
                "model": {
                    "$ref": "#/definitions/Provider"
                }
            }
        },
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "err": {
                    "type": "string",
                    "description": "Description of the error"
                }
            }
        },
        "Provider": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Unique identifier representing a specific provider."
                },
                "name": {
                    "type": "string",
                    "description": "The provider's name."
                }
            }
        },
        "Client": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Unique identifier representing a specific client. It's and autonumeric field."
                },
                "name": {
                    "type": "string",
                    "description": "The client's name."
                },
                "phone": {
                    "type": "string",
                    "description": "The client's phone."
                },
                "email": {
                    "type": "string",
                    "description": "The client's email."
                },
                "client_providers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ClientProvider"
                    },
                    "description": "An array containing the providers's id's associated with each client"
                }
            }
        },
        "ClientProvider": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Provider's unique identifier representing a specific provider. It's and autonumeric field."
                }
            }
        }
    }
}